{
  "name": "koa-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for koa application",
  "main": "server/index.ts",
  "scripts": {
    "start": "npm run compile && node dist/index.js",
    "compile": "tsc",
    "compile-watch": "tsc --watch",
    "watch": "nodemon server/index.ts",
    "test": "jest --coverage",
    "test-watch": "jest --watch",
    "lint": "tslint --project tsconfig.json",
    "precommit": "lint-staged"
  },
  "author": "QuartileOne",
  "license": "ISC",
  "lint-staged": {
    "*.{ts,js,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "config": "^1.30.0",
    "koa": "^2.4.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa2-swagger-ui": "^2.8.0",
    "mineq-service-nodejs-utils": "^1.0.27",
    "mongoose": "^5.0.15",
    "sequelize": "^4.37.6",
    "sequelize-typescript": "^0.6.3",
    "swagger-jsdoc": "^1.9.7",
    "tedious": "^2.3.1",
    "tslint": "^5.9.1",
    "winston": "^2.4.1",
    "winston-daily-rotate-file": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/koa": "^2.0.45",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-compose": "^3.2.2",
    "@types/koa-router": "^7.0.27",
    "@types/mongodb": "^3.0.15",
    "@types/mongoose": "^5.0.10",
    "@types/node": "^9.6.5",
    "@types/swagger-jsdoc": "^0.0.2",
    "@types/winston": "^2.3.9",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.4",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.1",
    "reflect-metadata": "^0.1.12",
    "ts-jest": "^22.4.3",
    "ts-node": "^6.0.0",
    "typescript": "^2.8.1"
  }
}
