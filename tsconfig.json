{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
      "./server/**/*.ts"
    ],
    "exclude": [
        "node_modules",
      "./server/**/*.spec.ts"
    ],
    "typeRoots": [
        "./node_modules/@types"
    ]
}
